<%= render "shared/header" %>
<h1>Animals#show</h1>
<div class="animal-show">
  <div class="animal-box">
    <h2 class="name">
      <%= @animal.name %>
    </h2>
    <div class="animal-img-content">
      <%= image_tag @animal.image, class:"animal-box-img" %>
    </div>
    <div class="animal-category-box">
      カテゴリー:
      <%= @animal.category.name %>
    </div>
    <div class="animal-explain-box">
      <span><%= @animal.detail %></span>
    </div>
    <% if user_signed_in? && current_user.id == 1 %>
    <%= link_to "情報編集", edit_animal_path, method: :get, class: "animal-red-btn" %>
    <p class="or-text">or</p>
    <%= link_to "情報削除", animal_path, method: :delete, class:"animal-destroy" %>
    <% end %>
  </div>
</div>