<h1>Aquariums#search</h1>
<p>Find me in app/views/aquariums/search.html.erb</p>

<div class='search-form'>
<%= form_with(url: aquariums_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>
</div>